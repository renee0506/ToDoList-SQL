
<h1>Create new @Model["category"].GetName() task</h1>
<hr>


<form action="/@Model["category"].GetId()/new-task" method="post">
  <label for="description">Task Description:</label>
  <input type="text" name="description">
  <label for="deadline">Deadline:</label>
  <input type="date" name="deadline" min="2017-02-21">
  <button type="submit">Submit</button>
</form>

<ul>
    @foreach(var task in @Model["taskList"])
    {
        <li>@task.GetDescription() is due on @task.GetDeadline()</li>
    }
</ul>


<a href="/">back to index</a>
